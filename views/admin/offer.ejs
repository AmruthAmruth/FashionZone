<!-- JavaScript -->
<script>
  // Function to open the modal and populate it with offer details
function openEditModal(offer) {
    // Fill the modal fields with the offer details
    document.getElementById('offerName').value = offer.offerName;
    document.getElementById('description').value = offer.description;
    document.getElementById('discount').value = offer.discount;
    document.getElementById('status').value = offer.status;

    // Populate categories in the select element
    const selectElement = document.getElementById('ecommerce-applied-products');
    selectElement.innerHTML = ''; // Clear previous options
    offer.category.forEach(category => {
        const option = document.createElement('option');
        option.value = category.id; // Assuming category has id
        option.text = category.name; // Assuming category has name
        selectElement.appendChild(option);

        // Automatically select the categories already applied in the offer
        if (offer.selectedCategories.includes(category.id)) {
            option.selected = true;
        }
    });

    // Update the selected categories display
    updateSelectedCategories();

    // Show the modal
    var myModal = new bootstrap.Modal(document.getElementById('editOfferModal'), {
        keyboard: false
    });
    myModal.show();
}

// Function to update the display of selected categories
function updateSelectedCategories() {
    const selectedCategories = document.getElementById('ecommerce-applied-products').selectedOptions;
    const selectedCategoriesContainer = document.getElementById('selected-products');
    selectedCategoriesContainer.innerHTML = ''; // Clear previous selections

    // Loop through selected options and add them to the display container
    Array.from(selectedCategories).forEach(option => {
        const categoryName = option.text;
        const categoryId = option.value;

        // Create a tag-like display for each selected category
        const categoryTag = document.createElement('div');
        categoryTag.className = 'badge bg-primary m-1 d-flex align-items-center';
        categoryTag.innerHTML = `${categoryName} <span class="ms-2 cursor-pointer" onclick="removeCategory('${categoryId}')">&times;</span>`;

        // Append the tag to the selected categories container
        selectedCategoriesContainer.appendChild(categoryTag);
    });
}

// Function to remove a selected category when the close button is clicked
function removeCategory(categoryId) {
    const selectElement = document.getElementById('ecommerce-applied-products');
    const option = selectElement.querySelector(`option[value="${categoryId}"]`);
    if (option) {
        option.selected = false; // Unselect the option
    }

    // Update the displayed selected categories
    updateSelectedCategories();
}

// Listen to change event to update the selected categories dynamically
document.getElementById('ecommerce-applied-products').addEventListener('change', updateSelectedCategories);

// Handle form submission to save the edited offer
document.getElementById('editOfferForm').addEventListener('submit', function(event) {
    event.preventDefault();
    
    // Collect form data
    const updatedOffer = {
        offerName: document.getElementById('offerName').value,
        description: document.getElementById('description').value,
        discount: document.getElementById('discount').value,
        status: document.getElementById('status').value,
        category: Array.from(document.getElementById('ecommerce-applied-products').selectedOptions).map(option => option.value)
    };

    // Here you can send the updated data to your server via an AJAX request or directly submit the form
    console.log(updatedOffer);

    // Close the modal after saving
    var myModal = bootstrap.Modal.getInstance(document.getElementById('editOfferModal'));
    myModal.hide();
});

</script>


















