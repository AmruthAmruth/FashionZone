
<%- include('../layout/header.ejs') -%>

    </head>

<div class="page-wrapper">




    <main class="main">


        <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17"
            style="background-image: url('static/images/backgrounds/login-bg.jpg')">
            <div class="container">
                <div class="form-box">
                    <h3 class="text-center mt-3 mb-3">Welcome to <span class="text-warning">FashionZone</span></h3>
                    <% if (message.length> 0) { %>
                        <p style="color: red;" class="text-center">
                            <%= message %>
                        </p>
                        <% } %>
                            <div class="form-tab">
                                <ul class="nav nav-pills nav-fill" role="tablist">
                                  
                                    <li class="nav-item">
                                        <a class="nav-link active" id="register-tab-2" data-toggle="tab"
                                            href="#register-2" role="tab" aria-controls="register-2"
                                            aria-selected="true">Enter Your New Password</a>
                                    </li>
                                </ul>




                                <div class="tab-content">
                                   



                                    <!-- Registration section -->






                                    <div class="tab-pane fade show active" id="register-2" role="tabpanel"
                                        aria-labelledby="register-tab-2">
                                        <form action="/resetpassword" method="post">

                                        


                                            <div class="form-group">
                                                <label for="password">New Password</label>
                                                <div class="input-group">


                                                    <input type="password" class="form-control"
                                                        title="Password must be at least 6 characters long, contain at least one uppercase letter, one lowercase letter, one number, and one special character."
                                                        style="border: 2px solid #9b9b9b; border-radius: 7px;"
                                                        id="password" name="newpassword"
                                                        pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*])[A-Za-z\d!@#$%^&*]{6,}"
                                                        required>




                                                    <div class="input-group-append">
                                                        <button type="button"
                                                            class="btn btn-outline-secondary toggle-password"
                                                            style="border: 2px solid #9b9b9b; border-radius: 7px;"
                                                            tabindex="-1"
                                                            onclick="togglePassword('password', this)">
                                                            <i class="fas fa-eye"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="confirm-password">Confirm Password</label>
                                                <div class="input-group">


                                                    <input type="password" class="form-control"
                                                        title="Password must be at least 6 characters long, contain at least one uppercase letter, one lowercase letter, one number, and one special character."
                                                        style="border: 2px solid #9b9b9b; border-radius: 7px;"
                                                        pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*])[A-Za-z\d!@#$%^&*]{6,}"
                                                        id="confirm-password" name="confirmnewPassword" required>




                                                    <div class="input-group-append">
                                                        <button type="button"
                                                            class="btn btn-outline-secondary toggle-password"
                                                            style="border: 2px solid #9b9b9b; border-radius: 7px;"
                                                            tabindex="-1"
                                                            onclick="togglePassword('confirm-password', this)">
                                                            <i class="fas fa-eye"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>

        

                                            <!-- Error Message Container (Optional) -->
                                            <div id="error-message" class="text-danger" style="display:none;"></div>






                                            <div class="form-footer">
                                                <button type="submit" class="btn btn-outline-primary-2 w-50 mx-auto">
                                                    <span>Submit</span>
                                                    <i class="icon-long-arrow-right"></i>
                                                </button>

                                                
                                            </div><!-- End .form-footer -->
                                        </form>

                                        

                                    </div><!-- .End .tab-pane -->
                                </div><!-- End .tab-content -->
                            </div><!-- End .form-tab -->
                </div><!-- End .form-box -->
            </div><!-- End .container -->
        </div><!-- End .login-page section-bg -->
    </main><!-- End .main -->

</div><!-- End .page-wrapper -->




<script>
    function togglePassword(inputId, button) {
        const input = document.getElementById(inputId);
        const icon = button.querySelector("i");

        if (input.type === "password") {
            input.type = "text";
            icon.classList.remove("fa-eye");
            icon.classList.add("fa-eye-slash");
        } else {
            input.type = "password";
            icon.classList.remove("fa-eye-slash");
            icon.classList.add("fa-eye");
        }
    }
</script>





<script>
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelector('.toggle-password').addEventListener('click', function () {
            const passwordInput = document.getElementById('login-password-2');
            const passwordIcon = this.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordIcon.classList.remove('fa-eye');
                passwordIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                passwordIcon.classList.remove('fa-eye-slash');
                passwordIcon.classList.add('fa-eye');
            }
        });
    });
</script>

