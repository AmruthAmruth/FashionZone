                                confirmButtonText: 'OK'
                            });
                            return;
                        }
                
                        // Validate Payment Method Selection
                        if (!selectedPaymentMethod) {
                            Swal.fire({
                                title: 'Error!',
                                text: 'Please select a payment method.',
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });
                            return;
                        }
                
                        // Set selected address ID into the hidden input field
                        document.getElementById('selectedAddressId').value = selectedAddressRadio.value;
                
