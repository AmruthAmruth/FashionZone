<script>
 let cropper; // Global cropper instance
let currentImageIndex; // Track the current image index

// Open the crop modal when an image is selected
function openCropModal(inputElement, index) {
    currentImageIndex = index; // Set the current image index
    const file = inputElement.files[0]; // Get the selected file
    const reader = new FileReader();
    const imageForCrop = document.getElementById('imageForCrop');

    if (file) {
        // Show the crop modal and set the image to be cropped
        reader.onload = function (e) {
            imageForCrop.src = e.target.result;
            $('#cropperModal').modal('show'); // Show the modal

            // Initialize or reinitialize the cropper
            if (cropper) {
                cropper.destroy(); // Destroy previous cropper instance if any
            }

            cropper = new Cropper(imageForCrop, {
                aspectRatio: 1, // Set aspect ratio (you can change this to your requirement)
                viewMode: 1, // Cropper's view mode
                autoCropArea: 0.8, // The area to crop
                responsive: true,
                zoomable: true,
                scalable: true,
            });
        };
        reader.readAsDataURL(file); // Read the image as a base64 string
    }
}

// Handle apply crop action
document.getElementById('applyCropBtn').onclick = function () {
    if (cropper) {
        // Get the cropped image as a DataURL
        const croppedCanvas = cropper.getCroppedCanvas();
        const croppedImageDataURL = croppedCanvas.toDataURL('image/jpeg'); // You can use 'image/png' if needed

        // Convert the cropped DataURL to a Blob
        croppedCanvas.toBlob(function (blob) {
            // Create a new File object from the Blob
            const croppedFile = new File([blob], `cropped-${Date.now()}.jpeg`, { type: 'image/jpeg' });

            // Add the cropped File to a hidden input field or replace the current file input
            const dataTransfer = new DataTransfer();
            dataTransfer.items.add(croppedFile);

            // Replace the file input's value with the cropped image
            const fileInput = document.getElementById('imageInput' + currentImageIndex);
            fileInput.files = dataTransfer.files;

            // Update the preview image
            const preview = document.getElementById('imagePreview' + currentImageIndex);
            preview.src = croppedImageDataURL;
            preview.style.display = 'block'; // Ensure the preview is visible

            // Close the crop modal
            $('#cropperModal').modal('hide');
        }, 'image/jpeg'); // Specify the desired output format
    } else {
        console.error('Cropper instance not found!');
    }
};

</script>

