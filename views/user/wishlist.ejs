<%- include('../layout/header.ejs') -%>

    </head>
   

<body>
    <div class="page-wrapper">
       
        <%- include('../partials/navbar.ejs') -%>
        

        <main class="main">
        	<div class="page-header text-center" style="background-image: url('/static/images/page-header-bg.jpg')">
        		<div class="container">
        			<h1 class="page-title">Wishlist<span>Shop</span></h1>
        		</div><!-- End .container -->
        	</div><!-- End .page-header -->
            <nav aria-label="breadcrumb" class="breadcrumb-nav">
                <div class="container">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Shop</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Wishlist</li>
                    </ol>
                </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->

            <div class="page-content">
            	<div class="container">
					<% if (products.length > 0) { %>
                        <table class="table table-wishlist table-mobile">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Stock Status</th>
                                    <th>Action</th>
                                    <th>Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                <% products.forEach(product => { %>
                                    <tr>
                                        <td class="product-col">
                                            <div class="product">
                                                <figure class="product-media">
                                                    <a href="#">
                                                        <img src="<%= product.images[0] %>" alt="<%= product.title %>">
                                                    </a>
                                                </figure>
                                                <h3 class="product-title">
                                                    <a href="#"><%= product.title %></a>
                                                </h3>
                                            </div>
                                        </td>
                                        <td class="price-col">â‚¹<%= product.disPrice %></td>
                                        <td class="stock-col">
                                            <% if (product.stock > 0) { %>
                                                <span class="in-stock">In stock</span>
                                            <% } else { %>
                                                <span class="out-of-stock">Out of stock</span>
                                            <% } %>
                                        </td>
                                        <td class="action-col">
                                            <% if (product.stock > 0) { %>
                                                <form action="/cart/add/<%= product._id %>" method="POST">
                                                    <button type="submit" class="btn btn-block btn-outline-primary-2" style="border: none;">
                                                        <span>Add to cart</span>
                                                    </button>
                                                </form>
                                            <% } else { %>
                                                <button class="btn btn-block btn-outline-primary-2 disabled">Out of Stock</button>
                                            <% } %>
                                        </td>
                                        <td class="remove-col">
                                            <form method="POST" action="/removewishlist">
                                                <input type="hidden" name="productId" value="<%= product._id %>">
                                                <button class="btn-remove"><i class="icon-close"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <div class="wishlist-empty">
                            <p>Your wishlist is empty.</p>
                            <a href="/shop" class="btn btn-primary">Start Shopping</a>
                        </div>
                    <% } %>
                    ><!-- End .table table-wishlist -->
	            	<div class="wishlist-share">
	            		<div class="social-icons social-icons-sm mb-2">
	            			<label class="social-label">Share on:</label>
	    					<a href="#" class="social-icon" title="Facebook" target="_blank"><i class="icon-facebook-f"></i></a>
	    					<a href="#" class="social-icon" title="Twitter" target="_blank"><i class="icon-twitter"></i></a>
	    					<a href="#" class="social-icon" title="Instagram" target="_blank"><i class="icon-instagram"></i></a>
	    					<a href="#" class="social-icon" title="Youtube" target="_blank"><i class="icon-youtube"></i></a>
	    					<a href="#" class="social-icon" title="Pinterest" target="_blank"><i class="icon-pinterest"></i></a>
	    				</div><!-- End .soial-icons -->
	            	</div><!-- End .wishlist-share -->
            	</div><!-- End .container -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->




  
        <%- include('../partials/footer.ejs')-%>


       </div>
    
</body>
</html>