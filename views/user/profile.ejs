<script>
  // Listen for clicks on the "Cancel" button
  $('.cancel-order').click(function() {
    var orderId = $(this).data('order-id'); // Get the order ID
    Swal.fire({
      title: 'Are you sure?',
      text: "You won't be able to revert this!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonText: 'Yes, cancel it!',
      cancelButtonText: 'No, keep it'
    }).then((result) => {
      if (result.isConfirmed) {
        // Send AJAX request to update order status to 'Cancelled'
        $.ajax({
          url: '/orders/cancel',  // Server route for cancelling the order
          method: 'POST',
          data: { orderId: orderId },
          success: function(response) {
            if (response.success) {
              Swal.fire(
                'Cancelled!',
                'Your order has been cancelled.',
                'success'
              );
              // Update the order status on the page
              location.reload();  // Reload the page to reflect the updated status
            } else {
              Swal.fire(
                'Failed!',
                'There was an error cancelling the order.',
                'error'
              );
            }
          },
          error: function() {
            Swal.fire(
              'Error!',
              'Something went wrong.',
              'error'
            );
          }
        });
      }
    });
  });
</script>






